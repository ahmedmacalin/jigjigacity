<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="0dp"
    android:background="@drawable/jigjigaairportsbac"
    android:orientation="vertical"
    android:padding="30dp"
    android:baselineAligned="false">

    <DigitalClock
        android:id="@+id/digitalClock1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DigitalClock" />
        
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical" >

        <Button
            android:id="@+id/tbtn_1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:background="@drawable/button_green"
            android:drawableLeft="@drawable/transport"
            android:text="Transport"
            android:textColor="@color/black" />
	
	</LinearLayout>

    <LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical" >



        <Button
            android:id="@+id/airports_btn"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="0dp"
            android:layout_weight="1"
            android:background="@drawable/transport_button"
            android:drawableLeft="@drawable/airiconleft"
            android:drawableRight="@drawable/arrowgreenicon"
            android:padding="1dp"
            android:text="JIGJIGA AIRPORTS"
            android:textColor="@color/black" />
	
        <Button
            android:id="@+id/other_button"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="0dp"
            android:layout_weight="1"
            android:background="@drawable/transport_button"
            android:drawableLeft="@drawable/airiconleft"
            android:drawableRight="@drawable/arrowgreenicon"
            android:padding="1dp"
            android:text="OTHER AIRPORTS"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/bus_button"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="0dp"
            android:layout_weight="1"
            android:background="@drawable/transport_button"
            android:drawableLeft="@drawable/busicon2"
            android:drawableRight="@drawable/arrowgreenicon"
            android:padding="1dp"
            android:text="BUS"
            android:textColor="@color/black" />



    </LinearLayout>

    </LinearLayout>