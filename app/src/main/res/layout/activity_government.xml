<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/govbackground"
    android:orientation="vertical"
    android:padding="30dp" >
        


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <Button
	            android:id="@+id/gbtn_1"
	            android:layout_width="fill_parent"
	            android:layout_height="fill_parent"
	            android:layout_marginBottom="210dp"
	            android:layout_marginTop="0dp"
	            android:layout_weight="1"
	            android:background="@drawable/button_gov"
	            android:drawableLeft="@drawable/govnicon"	           
	            android:text="GOVERNMENT DEPARTMENTS"
	            android:textColor="@color/black" />

    </LinearLayout>

    <LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical" >

        <Button
	            android:id="@+id/gbtn_2"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginBottom="10dp"
	            android:layout_marginLeft="0dp"
	            android:background="@drawable/button_gov"
	            android:drawableLeft="@drawable/agriicon"
	            android:drawableRight="@drawable/arrowgreenicon"
	            android:text="AGRICULTURE DEPARTMENT"
	            android:textColor="@color/black" />

        <Button
	            android:id="@+id/gbtn_3"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginBottom="10dp"
	            android:layout_marginLeft="0dp"
	            android:layout_weight="0"
	            android:background="@drawable/button_gov"
	            android:drawableLeft="@drawable/educicon"
	            android:drawableRight="@drawable/arrowgreenicon"
	            android:text="EDUCATION DEPARTMENT"
	            android:textColor="@color/black" />

        <Button
	            android:id="@+id/gbtn_4"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginBottom="10dp"
	            android:layout_marginLeft="0dp"
	            android:background="@drawable/button_gov"
	            android:drawableLeft="@drawable/healthicon3"
	            android:drawableRight="@drawable/arrowgreenicon"
	            android:text="HEALTH DEPARTMENT"
	            android:textColor="@color/black" />

    </LinearLayout>

    </LinearLayout>